<p id="notice"><%= notice %></p>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="pull-right">
        <%= image_tag @book.avatar.url(:thumb) %>
      </div>
      <h3><%= @book.title.titleize %></h3>
      <h4>by <%= @book.author.titleize %></h4>
    </div>
    <div class="panel-body">
      <p><%= @book.summary %></p>
      <p><strong>Average Rating:  </strong><%= @book.avg_rating %> out of 5.0</p>
    </div>
    <!-- ???? -->
    <% if current_user == @book.user %>
      <div class="panel-footer">
        <%= link_to 'Edit', edit_book_path(book), class:"btn btn-default" %>
        <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
